{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "addLabels": [
    "dependencies",
    "bot"
  ],
  "extends": [
    "config:best-practices"
  ],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "description": "Group pre-commit updates into a single commit",
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "pre-commit updates"
    },
    {
      "description": "Update the renovate pre-commit-hooks once a week at most.",
      "matchPackageNames": [
        "renovatebot/pre-commit-hooks"
      ],
      "schedule": "* 0-3 * * 1"
    },
    {
      "description": "These packages are not abandoned just yet",
      "matchPackageNames": [
        "aio-libs/get-releasenote",
        "Lucas-C/pre-commit-hooks",
        "toml",
        "re-actors/alls-green"
      ],
      "abandonmentThreshold": "5 years"
    }
  ],
  "platformAutomerge": true
}
